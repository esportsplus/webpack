{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "./build",
        "esModuleInterop": true,
        "module": "commonjs",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "build",
        "removeComments": true,
        "target": "es5"
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}